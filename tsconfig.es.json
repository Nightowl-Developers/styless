{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "dist",
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx"
    ]
}